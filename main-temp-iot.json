            "storageUri1": "https://projectiot.blob.core.windows.net/iothub/webdb.bacpac"
        },
        "dataAggregatorServerSettings": {
            "location": "[variables('location')]",
            "dataAggregatorVMName": "dataAggServer",
            "virtualNetworkName": "[concat('dataVnet',variables('suffix'))]",
            "subnetName": "datasubnet",
            "addressPrefix": "10.0.0.0/16",
            "subnetPrefix": "10.0.1.0/24",
            "adminUsername": "[parameters('dataAggregatorAdminUserName')]",
            "adminPassword": "[parameters('dataAggregatorAdminPassword')]",
            "dataAggregatorNic": "data-nic",
            "dataAggregatorNSG": "data-nsg",
            "dataAggregatorPublicIpName": "data-pip",
            "dataAggregatorDiagStgAcnt": "[concat('diagstrg',variables('suffix'))]",
            "dataAggregatorVMSize": "[parameters('dataAggregatorVMSize')]",
            "dataAggregatorDnsLabelPrefix": "[concat('server',variables('suffix'))]",
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2012-R2-Datacenter",
            "version": "latest",
            "storageAccountType": "[variables('storageAccountType')]",
            "diagStorageAccountType": "Standard_LRS",
            "publicIpAddressType": "Dynamic",
            "powerBIScriptUrl": "[concat(variables('baseUrl'),'scripts/powerBiInstall1.ps1','?token=AYpAeGb4sWCwf-v3cH8kY1aPGdqUyaiCks5avjNNwA%3D%3D')]",
            "powerBITemplatesUrl": "https://projectiot.blob.core.windows.net/iothub/PowerBI_Templates.zip",
