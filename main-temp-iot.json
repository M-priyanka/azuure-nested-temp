    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "IotHub",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/iothub.json','?token=AYpAePnU5FmyvJk97dVuVIXwAqKoZsquks5awdnfwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "iotHubSettings": {
                        "value": "[variables('iotHubSettings')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AzureSqlServer",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/azuresqlserver.json','?token=AYpAeHGHoANpZ1YfYQ3o00ORWzD01eWZks5avJWZwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "azureSQL": {
                        "value": "[variables('azureSQL')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "dataAggregator",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/data-aggregator.json','?token=AYpAeML5kgJuBvRHqqAlNnXe6sdkFk2Nks5avjLOwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataAggregatorServerSettings": {
                        "value": "[variables('dataAggregatorServerSettings')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "StreamAnalytics",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "IotHub",
                "AzureSqlServer"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/streamanalytics.json','?token=AYpAeN7iIHWDlLqk1hUG--mBQD2M8C8Xks5aviJ-wA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "streamAnalyticsSettings": {
                        "value": "[variables('streamAnalyticsSettings')]"
                    },
                    "iotHubSettings": {
                        "value": "[variables('iotHubSettings')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    },
                    "azureSQL": {
                        "value": "[variables('azureSQL')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AppComponents",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "AzureSqlServer",
                "IotHub"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/webapp.json','?token=AYpAeHe78PyeHCPbpH6SkRyfw2VuxxClks5awgGywA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    },
                    "webSiteSettings": {
                        "value": "[variables('webSiteSettings')]"
                    },
                    "iotHubSettings": {
                        "value": "[variables('iotHubSettings')]"
                    },
                    "azureSQL": {
                        "value": "[variables('azureSQL')]"
                    },
                    "iotHubPrimaryKey": {
                        "value": "[reference('IotHub').outputs.iotHubPrimaryKey.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "azureSQLEndpoint": {
            "type": "string",
            "value": "emsdemosqlsrv.database.windows.net"
        },
        "azureSQLIoTDBName": {
            "type": "string",
            "value": "[reference('AzureSqlServer').outputs.iotDBName.value]"
        },
        "azureSQLWebDBName": {
            "type": "string",
            "value": "[variables('azureSQL').databaseName1]"
        },
        "azureSQLUsername": {
            "type": "string",
            "value": "sqluser"
        },
        "azureSqlPassword": {
            "type": "string",
            "value": "Password@1234"
        },
        "dataAggregatorFQDN": {
            "type": "string",
            "value": "[reference('dataAggregator').outputs.dataAggregatorFQDN.value]"
        },
        "xsimulatorUIWebapp": {
            "type": "string",
            "value": "[concat('https://', variables('webSiteSettings').iotLabsApp, '.azurewebsites.net')]"
        }
    }
}
