            "notificationClickAction": "[variables('websiteFullAddress')]",
            "restServerPackageURI": "https://projectiot.blob.core.windows.net/iothub/RestService.zip",
            "powerGridEntities": "[concat('metadata=res://*/Entities.PowergridModel.csdl|res://*/Entities.PowergridModel.ssdl|res://*/Entities.PowergridModel.msl;provider=System.Data.SqlClient;provider connection string=\"data source=','emsdemosqlsrv.database.windows.net;initial catalog=',variables('azureSQL').databaseName,';persist security info=True;user id=',variables('azureSql').sqlAuthenticationLogin,';password=',variables('azureSql').sqlAuthenticationPassword,';multipleactiveresultsets=True;application name=EntityFramework\"')]"
        },
        "azureSQL": {
            "location": "[variables('location')]",
            "sqlAuthenticationLogin": "sqluser",
            "sqlAuthenticationPassword": "Password@1234",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "databaseName": "iotdb",
