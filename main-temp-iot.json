        "location": "[resourceGroup().location]",
        "deployStorageAccountName": "projectiot",
        "deployStorageAccountKey": "68qPHnikzAitr3fjvPAyem7Tc0y2pf+BVob4F+opoX20PhV0yJGQc/guxxhCV/Uscp0gE1EHn+GCGfwOiaF9tg==",
        "sasToken": "?",
