{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkSpec": {
            "type": "object"
        }
    },
    "variables": {
        "sampleIP":"[parameters('networkSpec').sampleIP]",
        "SubnetName":"[parameters('networkSpec').SubnetName]",
        "virtualnetworkName": "[parameters('networkSpec').virtualnetworkName]"

    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "samplenic",
            "location": "West US",
            "apiVersion": "2017-06-01",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('sampleIP'))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualnetworkName'),'/',variables('SubnetName')))]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}
