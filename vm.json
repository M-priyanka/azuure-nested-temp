{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkSpec": {
            "type": "object"
        }
    },
    "variables": {
        "Samplenic":"[parameters('networkSpec').Samplenic]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('networkSpec').Samplevm]",
            "location": "West US",
            "apiVersion": "2017-03-30",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D1_v2"
                },
                "osProfile": {
                    "computerName": "sampleComp",
                    "adminUsername": "samplelinuxvm",
                    "adminPassword": "P@ssword@123"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "14.04.2-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('networkSpec').storageAccountname]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[concat(resourceId('Microsoft.Network/networkInterfaces',variables('Samplenic')))]"
                        }
                    ]
                }
            }
        }
    ]
}
